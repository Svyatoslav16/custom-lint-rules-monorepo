{
	"compilerOptions": {
		"strict": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"module": "esnext",
		"lib": ["ES6", "DOM"],
		"target": "esnext",
		"esModuleInterop": false,
		"jsx": "react",
		"resolveJsonModule": true,
		"allowJs": true,
		"sourceMap": true,
		"outDir": "./bundle",
		"rootDir": "src",
		"moduleResolution": "node",
		"typeRoots": ["./node_modules/@types"],
		"baseUrl": "./",
		"paths": {
			"@assets/*": ["src/assets/*"],
			"@images/*": ["src/assets/images/*"],
			"@icons/*": ["src/assets/images/icons/*"],
			"@type/*": ["src/types/*"],
			"@components/*": ["src/components/*"],
			"@providers/*": ["src/providers/*"],
			"@helpers/*": ["src/helpers/*"],
			"@stores/*": ["src/stores/*"],
			"@hooks/*": ["src/hooks/*"],
			"@utils/*": ["src/utils/*"],
			"@theme/*": ["src/theme/*"],
			"@styles/*": ["src/styles/*"],
			"@animations/*": ["src/assets/animations/*"],
			"@api/*": ["src/api/*"],
			"@features/*": ["src/features/main/*"],
			"@mock/*": ["src/mock/*"],
			"@mainsiteComponents/*": ["src/features/main/mainsite/components/*"]
		}
	},
	"exclude": ["node_modules", "bundle", "storybook-static"],
	"include": ["src", "@types"],
	"compileOnSave": true
}
